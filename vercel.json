{
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } }
  ],
  "routes": [
    { "src": "^/api/.*", "dest": "/api/index.ts" },
    { "src": "^(?!/api/).*", "dest": "/" }
  ]
}
